{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      // "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "src/**/*",
      "mini-blockchain/Blockchain",
      "mini-blockchain"
   ],
   "paths": {
      "@models/*": [
         "src/models/*"
      ],
      "@controllers/*": [
         "src/controllers/*"
      ]
   },
}